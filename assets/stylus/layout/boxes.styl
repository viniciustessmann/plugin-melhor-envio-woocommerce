  border 1px solid #FFFFFF
  box-shadow 1px 1px 3px 0 rgba(0,0,0,0.17)
  border-radius 4px
  padding 20px
  margin-bottom 20px
  box-sizing border-box

  &.-blue
    border-color #0550a0
    border-width 2px

  .txt-ttl
    font-size 16px
    font-weight 300
    margin-bottom 10px
